{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": ["es5", "es2015", "es6", "dom"],
    "declaration": true,
    "removeComments": true,
    // "emitDecoratorMetadata": true,
    // "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    // "esModuleInterop": true,
    // "noEmitHelpers": true,
    // "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "**/src/**/*.ts",
    "**/test/**/*.ts",
    // etc
  ]
}
